<!-- Ads -->
<% @ads.each do |ad| %>
  <div class="col-lg-4 col-md-4 mb-4">
    <div class="card h-100">
      <%= link_to image_tag(ad.picture, width: 200, class: "card-img-top"), site_ad_detail_path(ad), remote: true %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to truncate(ad.title, length: 20), site_ad_detail_path(ad), remote: true %>
        </h4>
        <h5><%= humanized_money_with_symbol ad.price %></h5>
        <p class="card-text"><%= truncate(ad.description, length: 100) %></p>
      </div>
      <div class="card-footer">
        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
      </div>
    </div>
  </div>
<% end %>
<!-- /Ads -->
