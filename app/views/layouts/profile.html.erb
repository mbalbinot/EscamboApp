<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title><%= t('app.name') %></title>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= stylesheet_link_tag    'site', media: 'all' %>
        <%= stylesheet_link_tag    'site/profile', media: 'all' %>
        <%= javascript_include_tag 'application' %>
        <%= javascript_include_tag 'site' %>
        <%= javascript_include_tag 'site/profile' %>

        <%= yield :javascripts %>

        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
    </head>
    <body>
        <%= render partial: "layouts/site_shared/navigation" %>
        <div id="wrapper" class="toggled">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="#">
                            Start Bootstrap
                        </a>
                    </li>
                    <li>
                        <%= link_to t('profile_menu.dashboard'), site_profile_dashboard_index_path %>
                    </li>
                    <li>
                        <a href="#"><%= t('profile_menu.my_data') %></a>
                    </li>
                    <li>
                        <%= link_to t('profile_menu.my_ads'), site_profile_ads_path %>
                    </li>
                    <li>
                        <%= link_to t('profile_menu.new_ad'), new_site_profile_ad_path %>
                    </li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <%= yield %>
                </div>
            </div>
            <!-- /#page-content-wrapper -->
        </div>
        <!-- /#wrapper -->
        <%= render partial: "layouts/site_shared/footer" %>

        <% if notice %>
            <%= javascript_tag "$.notify('#{notice}', 'success');" %>
        <% end %>
    </body>
</html>
