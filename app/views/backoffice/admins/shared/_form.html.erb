<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Administradores</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-8">
        <% if @admin.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <ul>
                    <% @admin.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= form_action %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <%= form_for([:backoffice, @admin]) do |f| %>
                        <div class="form-group">
                            <label>Nome</label>
                            <%= f.text_field :name, class: "form-control", placeholder: "Nome do administrador" %>
                        </div>
                        <div class="form-group">
                            <label>E-mail</label>
                            <%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
                        </div>
                        <div class="form-group">
                            <label>Repita a senha</label>
                            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita a senha" %>
                        </div>
                        <button type="submit" class="btn btn-default">Salvar</button>
                    <% end %>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
<!-- /.row -->
