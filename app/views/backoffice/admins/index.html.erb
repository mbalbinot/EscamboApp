<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Administradores</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Listando Administradores
                <%= link_to new_backoffice_admin_path,
                            class: "btn btn-info btn-circle pull-right",
                            style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>E-Mail</th>
                            <th colspan="2">Tipo de Acesso</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @admins.each do |admin| %>
                            <tr>
                                <td><%= admin.id %></td>
                                <td><%= admin.name %></td>
                                <td><%= admin.email %></td>
                                <td><%= admin.role_br %></td>
                                <td>
                                    <%= link_to edit_backoffice_admin_path(admin),  class: "btn btn-primary btn-circle" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <% if current_admin.id != admin.id %>
                                        <%= link_to backoffice_admin_path(admin), method: :delete,
                                                    data: {confirm: "VocÃª deseja realmente excluir <b>(#{admin.email})</b>?"},
                                                    class: "btn btn-danger btn-circle" do %>
                                            <i class="fa fa-minus"></i>
                                        <% end %>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
