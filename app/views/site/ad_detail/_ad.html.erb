<div class="card mt-4">
    <%= image_tag @ad.picture, width: 900, height: 400, class: "card-img-top img-fluid" %>
    <div class="card-body">
        <h3 class="card-title"><%= @ad.title %></h3>
        <h4><%= humanized_money_with_symbol @ad.price %></h4>
        <p class="card-text"><%= md_to_html(@ad.description) %></p>
        <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
        4.0 stars
    </div>
</div>
